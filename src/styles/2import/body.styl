body
  margin 0
  font-size 14px
  overflow auto
  overflow-y overlay

body.medium-zoom--opened .medium-zoom-overlay
  z-index 2

body.medium-zoom--opened .medium-zoom-close
  position fixed
  top 40px
  right 40px
  width 40px
  height 40px
  z-index 10000
  cursor pointer
  background-size 100%
  background-repeat none
  background-image url('data:image/svg+xml;base64,')