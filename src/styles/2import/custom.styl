.box-shadow-home
  // box-shadow: 0px 1px 2px rgba(0, 0, 0, 0.3), 0px 1px 3px 1px rgba(0, 0, 0, 0.15);
  border: 1px solid var(--surface-surface-variant, #EFE8E8);
  border-radius: 12px;
  transition transform .2s
.box-shadow-home:hover 
  // transform: scale(1.04);
  box-shadow: 0px 12px 20px 0px rgba(0, 0, 0, 0.08), 0px 8px 12px 6px rgba(0, 0, 0, 0.15), 0px 4px 4px 0px rgba(0, 0, 0, 0.25);

.scale-animation
  transition transform .2s

.scale-animation:hover 
  transform: scale(1.2);

.box-shadow-header
  box-shadow: 0px 4px 8px 3px rgba(155, 155, 155, 0.15), 0px 1px 3px rgba(155, 155, 155, 0.3);

.box-shadow-header-opposite
  box-shadow: 0px -4px -1px 3px rgba(155, 155, 155, 0.15), 0px -1px 3px rgba(155, 155, 155, 0.3);

.flex-0-auto
  flex 0 0 auto

.button-red
  background #E91D23
  color white
  border 1px solid #E91D23
  cursor pointer
  transition all .3s
  &:hover
    background white
    color #E91D23
    svg path 
      fill #E91D23
    
.button-white
  box-shadow: 0px 1px 2px rgba(0, 0, 0, 0.3), 0px 1px 3px 1px rgba(0, 0, 0, 0.15);
  background white !important
  color #E91D23 !important
  transition all .3s
  svg path 
    fill #E91D23
  
  &:hover
    background #E91D23 !important
    color white !important
    svg path 
      fill white

