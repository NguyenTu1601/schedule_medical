::placeholder { /* Chrome, Firefox, Opera, Safari 10.1+ */
  opacity: 1; /* Firefox */
}

:-ms-input-placeholder { /* Internet Explorer 10-11 */
  color: black !important;
}

::-ms-input-placeholder { /* Microsoft Edge */
  color: black !important;
}

.hover-opacity:hover
  opacity 0.8
  cursor pointer

.text-html
  white-space break-spaces

.box-shadow-forbes
  box-shadow 0px 3px 16px rgba(0, 0, 0, 0.08)
  border-radius 8px

.box-shadow-forbes2
  box-shadow: 2px 2px 9px 8px #e6e1e1;
  border-radius 8px

textarea:focus, input:focus{
  outline: none;
}

.radio-forbes
  .el-radio__input
    .el-radio__inner
      height 16px
      width 16px
    &.is-checked
      .el-radio__inner
        border-color #41454F
        background white
        &::after
          background #E91D23 !important
          height 8px
          width 8px

.el-collapse, .el-collapse-item, .el-collapse-item__header, .el-collapse-item__wrap
  border none !important
  background initial !important
.el-collapse.summary-collapse
  .el-collapse-item__header
    font-size 20px
    font-weight 600

.el-collapse.admin-sidebar-collapse
  .el-collapse-item__header
    background initial
    color white
  .el-collapse-item__content
    padding-bottom 0px
  .el-icon
    margin-right 24px !important

.checkbox-forbes-sm.el-checkbox
  .el-checkbox__input.is-checked .el-checkbox__inner
    background linear-gradient(133.57deg, #9A0B0F -0.06%, #FF2010 100%) !important
    border-color #E91D23
  .el-checkbox__input.is-checked+.el-checkbox__label
    color black
  .el-checkbox__label
    font-weight 600


.noselect {
  -webkit-touch-callout: none; /* iOS Safari */
    -webkit-user-select: none; /* Safari */
     -khtml-user-select: none; /* Konqueror HTML */
       -moz-user-select: none; /* Old versions of Firefox */
        -ms-user-select: none; /* Internet Explorer/Edge */
            user-select: none; /* Non-prefixed version, currently
                                  supported by Chrome, Edge, Opera and Firefox */
}
    
.capitalize-first-letter::first-letter
  text-transform capitalize

.el-select.el-select-n-border.el-select-admin
  .el-input__inner
    padding-left 24px !important
.el-select.el-select-n-border
  .el-input__inner
    padding-left 0px !important
    box-shadow none !important
    &:focus 
      box-shadow none !important
  .el-input.is-focus .el-input__inner
    box-shadow none !important

